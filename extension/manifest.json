{
  "manifest_version": 3,
  "name": "O'Reilly EPUB Downloader",
  "version": "1.0.0",
  "description": "Download books from O'Reilly Learning Platform as EPUB files",
  "author": "Sebastian Emilio Kremarik | security-log",
  
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "permissions": [
    "downloads",
    "storage"
  ],

  "host_permissions": [
    "https://learning.oreilly.com/*",
    "https://*.oreilly.com/*"
  ],

  "background": {
    "scripts": ["lib/jszip.min.js", "cache.js", "pool.js", "download.js", "background.js"]
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "O'Reilly EPUB Downloader"
  },

  "content_scripts": [
    {
      "matches": [
        "https://learning.oreilly.com/library/view/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["lib/jszip.min.js"],
      "matches": ["https://learning.oreilly.com/*"]
    }
  ]
}
